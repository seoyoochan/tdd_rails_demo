<div class="container-fluid">
  <div class="row">
    <%= form_for @recipe, url: { action: :create }, html: { class: "recipeForm" } do |f| %>
        <%= f.text_field :title, class: "form-control", placeholder: "Title"  %>
        <div class="form-group">
          <div class="col-sm-6">
            <%= f.text_field :preferences, class: "form-control", placeholder: "Preferences"  %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :type, class: "form-control", placeholder: "Type"  %>
          </div>

          <div class="col-sm-6">
            <%= f.text_field :cuisine, class: "form-control", placeholder: "Cuisine"  %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :difficulty, class: "form-control", placeholder: "Difficulty"  %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :servings, class: "form-control", placeholder: "Servings" %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :time, class: "form-control", placeholder: "Time (in min)" %>
          </div>
        </div>
        <%= f.text_area :body, class: "form-control" %>
      <%= f.submit "Create", class: "btn btn-success pull-right" %>
    <% end %>
  </div>
</div>
